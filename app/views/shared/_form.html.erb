<%= form_with url: path, method: :method, local: true do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :qty_threshold, "Quantity Threshold"  %>
<%= f.text_field :qty_threshold %>
<%= f.label :pct_discount, "Discount Percentage" %>
<%= f.text_field :pct_discount %>
<%= f.submit button_text %>
<% end %>