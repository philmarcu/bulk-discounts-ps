<h1>Edit <%= @discount.name %></h1>
<div id="discount-update">
  <%= form_with url: "/merchants/#{@discount.merchant_id}/bulk_discounts/#{@discount.id}", method: :patch, local: true do |f| %>

    <p id="discount-name-field">
      <%= f.label :name, "Discount Name:" %>
      <%= f.text_field :name, value: "#{@discount.name}" %>
    </p>

     <p id="discount-qty-field">
      <%= f.label :qty_threshold, "Quantity Threshold:" %>
      <%= f.text_field :qty_threshold, value: "#{@discount.qty_threshold}" %>
    </p>

     <p id="discount-pct-field">
      <%= f.label :pct_discount, "Discount Percentage:" %>
      <%= f.text_field :pct_discount, value: "#{@discount.pct_discount }" %>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
</div>